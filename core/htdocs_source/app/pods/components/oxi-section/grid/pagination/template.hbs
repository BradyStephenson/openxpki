{{#if @pager}}
    <nav class="oxi-pager text-right">
        <ul class="pagination">
            <li class="disabled pagination-label"><a>{{t 'pagination.items_per_page'}}</a></li>
            {{#each @pagesizes as |pagesize|}}
                <li class="{{if pagesize.active "active"}}"><a {{on "click" (fn @setPage pagesize)}}>{{pagesize.limit}}</a></li>
            {{/each}}
        </ul>
        {{#if @pages.length}}
            <ul class="pagination">
                <li class="{{if @pages.prev.disabled "disabled"}}">
                    <a aria-label={{t 'pagination.previous'}} {{on "click" (fn @setPage @pages.prev)}}>
                        {{!-- template-lint-disable no-bare-strings --}}
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                {{#each @pages as |page|}}
                    <li class="{{if page.active "active"}}"><a {{on "click" (fn @setPage page)}}>{{page.num}}</a></li>
                {{/each}}
                <li class="{{if @pages.next.disabled "disabled"}}">
                    <a aria-label={{t 'pagination.next'}} {{on "click" (fn @setPage @pages.next)}}>
                        {{!-- template-lint-disable no-bare-strings --}}
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        {{/if}}
        <ul class="pagination">
            <li class="disabled total"><a>{{t 'pagination.x_items' count=@pager.count}}</a></li>
        </ul>
    </nav>
{{/if}}
